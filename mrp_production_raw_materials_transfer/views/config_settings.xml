<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp.raw.materials</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@data-key='mrp']">
                <h2>Raw materials transfer</h2>

                <div class="row mt16 o_settings_container">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">

                        </div>
                        <div class="o_setting_right_pane">
                            <label for="raw_materials_picking_type_id"/>
                            <field name="raw_materials_picking_type_id"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">

                        </div>
                        <div class="o_setting_right_pane">
                            <label for="raw_materials_src_location_id"/>
                            <field name="raw_materials_src_location_id"/>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
