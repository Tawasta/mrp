<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<record id="material_requirement_line_form_view" model="ir.ui.view">
		<field name="name">material.requirement.line.form</field>
		<field name="model">material.requirement.line</field>
		<field name="arch" type="xml">
                    <tree string="Materials">
                        <field name="product_id" readonly="0"/>

                        <!--<field name="promised_qty_line" attrs="{'column_invisible': [('parent.manufacturing_level_line,'=','level_one')]}"/>-->

                        <field name="promised_qty_line" widget="radio" invisible="context.get('manufacturing_level_line') == True"/>

                        <!--<field name="manufacturing_level_line"/>-->
                        <field name="product_availability" style="text-align: right;"/>
                        <field name="qty_to_manufacture" class="pull-right"/>
                        <field name="product_uom_id"/>
                        <field name="variant"/>
                        <field name="can_be_manufactured"/> <!--attrs="{'invisible': [('manufacturing_level','!=','level_two')]}"/>-->
                        <field name="bom"/>  <!--attrs="{'invisible': [('product_id','=',False)]}" widget="selection" class="oe_right"
                                domain="[('product_tmpl_id.id','=',product_id),'|',('product_id.id','=',product_variant_id),('product_id','=',False)]"/>-->
			</tree>
		</field>
	</record>
</odoo>
